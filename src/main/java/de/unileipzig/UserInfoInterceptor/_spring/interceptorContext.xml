<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
  http://www.springframework.org/schema/beans 
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="UserInfoInterceptor.AfterLogin.Injection" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="afterLoginInterceptionManager" />
		<property name="targetMethod" value="addAfterLoginControllerConfig" />
		<property name="arguments">
			<ref bean="UserInfoInterceptor.AfterLoginConfig"/>
		</property>
	</bean>

	<bean id="UserInfoInterceptor.AfterLoginConfig" class="org.olat.login.AfterLoginConfig">
		<property name="afterLoginControllerList">
			<list>
				<map>
					<entry key="controller">
						<bean class="org.olat.core.gui.control.creator.AutoCreator" scope="prototype">
							<property name="className" value="de.unileipzig.UserInfoInterceptor.UserInfoController"/>
						</bean>
					</entry>
					<entry key="forceUser"><value>true</value></entry> <!-- user cannot continue without completing the form -->
					<entry key="redoTimeout"><value>0</value></entry> <!-- check on every login -->
					<!-- <entry key="i18nIntro"><value>de.unileipzig.UserInfoInterceptor:title</value></entry> -->	
					<entry key="order"><value>500</value></entry>
				</map>
			</list>
		</property>
	</bean>

</beans>
