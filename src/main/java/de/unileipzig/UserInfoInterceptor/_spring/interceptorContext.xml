<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
  http://www.springframework.org/schema/beans 
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="UserInfoInterceptor.AfterLogin.Injection" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="afterLoginInterceptionManager" />
		<property name="targetMethod" value="addAfterLoginControllerConfig" />
		<property name="arguments">
			<ref bean="UserInfoInterceptor.AfterLoginConfig"/>
		</property>
	</bean>

	<bean id="UserInfoInterceptor.AfterLoginConfig" class="org.olat.login.AfterLoginConfig">
		<property name="afterLoginControllerList">
			<list>
				<map>
					<entry key="controller">
						<bean class="org.olat.core.gui.control.creator.AutoCreator" scope="prototype">
							<property name="className" value="de.unileipzig.UserInfoInterceptor.UserInfoController"/>
						</bean>
					</entry>
					<entry key="forceUser" value="true" /> <!-- user cannot continue without completing the form -->
					<entry key="redoTimeout" value="0" /> <!-- check on every login -->
					<entry key="i18nIntro" value="de.unileipzig.UserInfoInterceptor:UserInfoController.title" />	
					<entry key="order" value="100" /> <!-- show as first dialog -->
				</map>
			</list>
		</property>
	</bean>

	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod" value="de.unileipzig.UserInfoInterceptor.UserInfoController.setSettings" />
		<property name="arguments">
			<list>
				<value>${userInfoInterceptor.enable:false}</value>
				<value>${userInfoInterceptor.studentNumber:ignore}</value>
				<value>${userInfoInterceptor.studentNumberCheck:}</value> <!-- empty string: do not perform a check -->
			</list>
		</property>
	</bean>

</beans>
