<?xml version="1.0"?>
<!--
/**
 * 
 * Mapping of CommentImpl class to database tables
 */
-->
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
  <class name="de.unileipzig.xman.comment.CommentImpl" table="o_xman_comment">  

    <id name="key" column="comment_id" type="long" unsaved-value="null">
      <generator class="hilo"/>
    </id>
    
   	<timestamp name="lastModified" column="lastmodified" />   
  	<property  name="creationDate" column="creationdate" type="timestamp" />   
    
    <bag name="comments" cascade="all">
            <key column="parent_id"/>
            <one-to-many class="de.unileipzig.xman.comment.CommentEntry"/>
    </bag>
    
  </class>  
</hibernate-mapping>