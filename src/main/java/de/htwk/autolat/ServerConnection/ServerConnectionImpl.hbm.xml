<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
  <class name="de.htwk.autolat.ServerConnection.ServerConnectionImpl" table="ao_serverconnection">  
  
    <id name="key" column="id" type="long" unsaved-value="null">
      <generator class="hilo"/>
    </id>

	<property  name="lastContact" column="lastcontact" type="timestamp" />
	<property name="isActive" column="isactive" type="boolean" />
	<property name="name" column="name" type="string" />
	<property name="path" column="path" type="string" />
	
  </class>
</hibernate-mapping>
