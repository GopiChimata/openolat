	</bean>
	-->
	
	<bean id="groupDeletionManager" class="org.olat.group.manager.BusinessGroupDeletionManager">
		<constructor-arg index="0" ref="deletionModule" />
		<property name="businessGroupService" ref="businessGroupService"/>
	</bean>

</beans>